ArrayList <particula> particulas;

void setup() {
  size (500, 500);
  println("TAU: "+TAU); //vale lo mismo que PI


  //color foo = color(0,255,0);


  particulas = new ArrayList<particula>();
  for (int i=0; i<100; i++) {
    particulas.add(new particula());
  }
}
void draw() {
  background(0);
  for (particula p : particulas) {
    p.display();
    p.movimiento();
  }
}
void mousePressed() {
  particula foo = new particula(mouseX, mouseY);
  particulas.add(foo);
}

class particula {
  float x, y, v, a, t, dx, dy;
  color c;  //es un tipo de dato que puede extenderse, y se interpreta como un nÃºmero
  particula (float x_, float y_, float v_, float a_, float t_, color c_, float dx_, float dy_) {
    x=x_;
    y=y_;
    v=v_;
    a=a_;
    t=t_;
    c=c_;
    dx = dx_;
    dy = dy_;
  }
  particula () {
    x= random(500);
    y= random (500);
    v= random(10);
    a= random (TWO_PI);
    t= random(1, 30);
    c= color (random(255), random(255), random(255));
    dx= 1;
    dy = 1;
  }
  particula(float x_, float y_) {
    x= x_;
    y= y_;
    v= random(10);
    a= random (TWO_PI);
    t= random(1, 30);
    c= color (random(255), random(255), random(255));
    dx= 1;
    dy = 1;
  }

  void display() {
    pushMatrix();
    translate(x, y);
    noStroke();
    fill(c);

    ellipse (0, 0, t, t);

    popMatrix();
  }
  void movimiento() {



    x += dx;
    y += dy;
    x+=random(radians (-36.86), radians(36.86));
    y+=random(radians (-36.86), radians(36.86));
  }
}
